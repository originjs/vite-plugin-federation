{
  "include": ["src", "types/*.d.ts"],
  "exclude": ["dist", "node_modules", "test"],
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": false,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
