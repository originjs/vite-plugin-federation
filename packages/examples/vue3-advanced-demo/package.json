{
  "name": "vue3-advanced-demo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "router-host",
    "router-remote"
  ],
  "scripts": {
    "start": "pnpm start",
    "build": "pnpm --parallel --filter \"./**\" build ",
    "serve": "pnpm --parallel --filter \"./**\" serve ",
    "restart": "pnpm run stop & lerna run build & lerna run serve --parallel --loglevel=silent & ",
    "stop": "kill-port --port 5004,5005",
    "clean": "pnpm run clean"
  },
  "devDependencies": {
    "@originjs/vite-plugin-federation": "workspace:*",
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0"
  },
  "license": "MulanPSL2"
}
