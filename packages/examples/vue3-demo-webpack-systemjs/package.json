{
  "name": "vue3-demo-webpack-systemjs",
  "private": true,
  "scripts": {
    "build": "pnpm --parallel --filter \"./**\" build",
    "serve": "pnpm --parallel --filter \"./**\" serve ",
    "build:remotes": "pnpm --filter \"./home\"  build",
    "serve:remotes": "pnpm --filter \"./home\"  serve",
    "dev:hosts": "pnpm --filter \"./layout\" dev",
    "stop": "kill-port --port 5000,5001"
  },
  "workspaces": [
    "home",
    "layout"
  ],
  "devDependencies": {
    "@originjs/vite-plugin-federation": "workspace:*",
    "kill-port": "^2.0.1"
  }
}
