{
  "name": "vite-plugin-federation",
  "private": true,
  "workspaces": [
    "packages/**"
  ],
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=7.0.1"
  },
  "author": "@originjs",
  "license": "MulanPSL-2.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "postinstall": "npx playwright install",
    "lint-staged": "lint-staged",
    "format": "prettier -w packages/lib/**/*.ts",
    "lint": "eslint packages/*/{src,types}/**",
    "lint:fix": "eslint --fix",
    "build": "cd packages/lib && pnpm build",
    "test": "npm-run-all test:unit test:e2e",
    "test:unit": "jest --coverage",
    "test:e2e": "jest --runInBand --config ./jest.e2e.config.js"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "jest-environment-node": "^27.3.1",
    "kill-port": "^1.6.1",
    "lint-staged": "^12.4.0",
    "npm-run-all": "^4.1.5",
    "playwright-chromium": "^1.19.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "husky": "^7.0.4"
  },
  "lint-staged": {
    "*.{ts,js,json,tsx,jsx,vue}": [
      "prettier --write",
      "eslint --cache --fix",
      "eslint"
    ]
  }
}
